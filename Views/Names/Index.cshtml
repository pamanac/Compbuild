@model IEnumerable<Compbuild.Models.Names>

@{
    ViewData["Title"] = "Names Page";
}

<h1 class="text-center">
    Names!
</h1>
<div class="d-inline-flex">
    <a asp-controller="Names" asp-action="Add" class="btn btn-primary mx-2">ADD</a>
</div>
<p>
    @if(Model.Count() > 0){
        <table>
            <tr><th>NAME</th></tr>
            <tbody>
                @foreach(var obj in Model){
                    <tr>    
                        <td>@obj.NAME</td>
                        <td><a asp-controller="Names" asp-action="Edit" asp-route-ID="@obj.ID" class="btn btn-info mx-2">EDIT</a></td>
                        <td><a asp-controller="Names" asp-action="Delete" asp-route-ID="@obj.ID" class="btn btn-danger mx-2">DELETE</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }else{
        <p> No names to display </p>
    }
</p>
