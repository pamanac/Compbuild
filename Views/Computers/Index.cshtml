@model IEnumerable<Compbuild.Models.Computers>

@{
    ViewData["Title"] = "Info";
}

<div>
    @if(Model.Count() > 0){
        @foreach(var comp in Model){
            <p>Computer name: @comp.NAME </p> <br />
            <img src=@comp.IMAGE_URL alt="Not found" style="max-height: 300px; max-width: 300px"/>
            <a class="btn btn-info" asp-controller="Computers" asp-action="Details" asp-route-ID="@comp.ID"> Details </a>
        }
    }else{
        <p> No products in the list </p>
    }
</div>

<input type="button" value="I am a useless button" class="btnclass" />
<script>
    $(document).ready(function () {
        //Bind the click event for the button
        $(".btnclass").click( function (evt) {
            alert('Wow! Such an alert!');
            evt.preventDefault();
        });
    });
</script>
