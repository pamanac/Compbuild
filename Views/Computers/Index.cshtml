@model IEnumerable<Compbuild.Models.Computers>

@{
    ViewData["Title"] = "Info";
}

<div>
    @if(Model.Count() > 0){
        @foreach(var comp in Model){
            <div class="container" style="position: relative;">
                <p>Computer name: @comp.NAME </p> <br />
                <img src=@comp.IMAGE_URL alt="Not found" style="max-height: 300px; max-width: 300px" class="computerImage"
                    style="position: absolute;"
                />
                <a class="btn btn-info" asp-controller="Computers" asp-action="Details" asp-route-ID="@comp.ID" 
                    style="position: absolute; z-index: 100; left: 30px; margin-top: 100px; margin-left: 30px;"> Details
                </a>
            </div>
        }
    }else{
        <p> No products in the list </p>
    }
</div>

<input type="button" value="I am a useless button" class="btnclass" />
<script>
    $(document).ready(function () {
        $(".btnclass").click( function (evt) {
            alert('Wow! Such an alert!');
            evt.preventDefault();
        });
        $(".btn-info").hide();

        $(".btn-info").hover( function () {
            $(this).show();
        });
        //var n = parseInt(@ViewBag.numberOfProducts);
        //for(let id=1; id <= n; id++){
            $(".computerImage").hover(function(){
                $(".btn-info").show();
            }, function(){
                $(".btn-info").hide();
            });
        //}
    });
</script>
